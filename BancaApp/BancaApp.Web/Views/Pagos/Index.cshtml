@using System.Globalization;
@{
    ViewData["Title"] = "Pagos";
}

<section id="hero" class="hero section">
    <div class="container ">
        <section id="features-cards" class="features-cards section">

            <div class="container">
                <h1 class="text-center mb-4">Pagos</h1>

                <!-- Resumen de montos mensuales -->
                <div class="row gy-4">

                    <div class="col-xl-6 col-md-6" data-aos="zoom-in" data-aos-delay="200">
                        <div class="feature-box blue">
                            <h4>Total Pagos Mes Actual</h4>
                            <h5 class="card-title">$1,250.00</h5>
                            <p class="card-text">Monto total pagos realizados en @DateTime.Now.ToString("MMMM", new CultureInfo("es-ES")).</p>
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-6" data-aos="zoom-in" data-aos-delay="200">
                        <div class="feature-box grey">
                            <h4>Total Pagos Mes Anterior</h4>
                            <h5 class="card-title">$1,800.00</h5>
                            <p class="card-text">Monto total de pagos realizados en @DateTime.Now.AddMonths(-1).ToString("MMMM", new CultureInfo("es-ES")).</p>
                        </div>
                    </div>
                </div>

                <!-- Botón para registrar nueva compra -->
                <div class="text-end mb-4">
                    <a asp-action="Registrar" class="btn btn-primary">Registrar Nuevo Pago</a>
                </div>

                <!-- Tabla de compras realizadas -->
                <div class="card">
                    <div class="card-header bg-light">Pagos Realizados Este Mes</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Descripción</th>
                                        <th>Monto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>2024-12-20</td>
                                        <td>Pago minimo</td>
                                        <td>$150.00</td>
                                    </tr>
                                    <tr>
                                        <td>2024-12-18</td>
                                        <td>Pago total tarjeta</td>
                                        <td>$75.00</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
